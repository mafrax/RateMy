<div id="criterionContainer<%= video._id %>_<%= tag.id %>">
        <div class="progress-wrapper flex-wrap" id="wrapper<%= video._id %>_<%= tag.id %>">
            <div class=" progress-info flex-wrap">
                <div class="progress-label3 flex-wrap"><span class="criterionTitle"
                        id="criterionName<%= video._id %>_<%= tag.id %>"><%= tag.tagName %></span><input type="hidden" id="custId3"></div>
                <div class="progress-label2 flex-wrap">
                    <div class="progress-percentage"><span style="color:rgba(248, 9, 176, 0.575)"
                            id="globalNote<%= tag.id %>_<%= video._id %>" data-toggle="tooltip" data-placement="top" title=""
                            data-original-title="Average note on votes in total"><%= tag.level %></span></div>
                </div>
                <div class="progress-percentage2 "><span style="color: rgba(94, 114, 228)"
                        id="criterionNote<%= tag.id %>_<%= video._id %>">0.00</span></div>
                <div class="validateCriterionContainer">
                    <button type="submit" class="validateCriterion"
                        data-toggle="tooltip" data-placement="top" title="" id="validateCriterionButton<%= video._id %>_<%= tag.id %>"
                        onclick="validateSearchButton(<%= video._id %>,<%= tag.id %>)"
                        data-original-title="clic here to validate and save your note and criterion">
                    </button>

                </div>
            </div>
            <div class="progress flex-wrap">
                <div class="progress-bar flex-wrap" role="progressbar" aria-valuenow="25" aria-valuemin="0"
                    aria-valuemax="100"
                    style="width: 78.75%;background-image: linear-gradient(to top,rgb(255, 224, 237),rgb(252, 151, 218));">
                </div>
            </div>
        </div>
        <div class="input-slider-container flex-wrap" id="slider-container<%= tag.id %>">
            <div id="input-slider<%= tag.id %>" class="input-slider flex-wrap noUi-target noUi-ltr noUi-horizontal"
                data-range-value-min="-100" data-range-value-max="100">
                <div class="noUi-base">
                    <div class="noUi-connects">
                        <div class="noUi-connect" style="transform: translate(0%, 0px) scale(0.5, 1);">
                        </div>
                    </div>
                    <div class="noUi-origin" style="transform: translate(-50%, 0px); z-index: 4;">
                        <div class="noUi-handle noUi-handle-lower" data-handle="0" tabindex="0"
                            role="slider" aria-orientation="horizontal" aria-valuemin="0.0"
                            aria-valuemax="100.0" aria-valuenow="50.0" aria-valuetext="0.00"></div>
                    </div>
                </div>
            </div><!-- Input slider values -->
            <div class="row mt-3 d-none flex-wrap">
                <div class="col-6"><span id="input-slider-value<%= tag.id %>" class="range-slider-value flex-wrap"
                        data-range-value-low="0">0.00</span>
                    </div>
            </div>
        </div>
    </div>